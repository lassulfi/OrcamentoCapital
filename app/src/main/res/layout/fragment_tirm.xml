<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.assulfisoft.oramentodecapital.fragment.TIRMFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tirm_title_textview"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_tirm_title"/>

        <TextView
            android:id="@+id/tv_tirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tirm_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/tirm_text_textview"/>

    </RelativeLayout>
</ScrollView>
