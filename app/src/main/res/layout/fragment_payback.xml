<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.assulfisoft.oramentodecapital.fragment.PaybackFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payback_title_textview"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_payback_title"/>

        <TextView
            android:id="@+id/tv_payback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_payback_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/payback_text_textview"/>

    </RelativeLayout>
</ScrollView>
